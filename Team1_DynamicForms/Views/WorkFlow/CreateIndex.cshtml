@model Team1_DynamicForms.Models.WorkFlowCreateIndexViewModel
@{
    ViewBag.Title = "CreateIndex";
}

<h2>Choose form to attach workflow</h2>
<hr/>
@using (Html.BeginForm())
{
    <div class="row">
    <div class="form-group">
        <label class="col-md-2 control-label">Form: </label>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.SelectedIndex, Model.Forms, new { @class = "form-control" })
        </div>
        @Html.AntiForgeryToken()
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
        </div>
}