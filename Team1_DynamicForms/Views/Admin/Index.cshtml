@using Microsoft.AspNet.Identity
@model Team1_DynamicForms.Models.WorkflowsToApproveViewModel
@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Hello @User.Identity.GetUserName()</h2>
<hr />

@if (User.IsInRole("SuperAdmin"))
{
<div class="row">
    <div class="col-md-3">
        <a class="button-main" href="/superadmin/Index"><span class="glyphicon glyphicon-list-alt"></span> Manage Users</a>
    </div>
</div>
}

<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">Actions</div>
        <div class="panel-body">
            <div class="col-md-3 col-xs-12">
                <h3>
                    Create
                    <span class="glyphicon glyphicon-plus"></span>
                </h3>
                <hr />
                <ul class="sectionOptions">
                    <a href="/Admin/CreateForm">
                        <li>
                            Form
                        </li>
                    </a>
                    <a href="/Workflow/CreateIndex">
                        <li>
                            Workflow
                        </li>
                    </a>
                </ul>
            </div>

            <div class="col-md-1"></div>

            <div class="col-md-3 col-xs-12">
                <h3>
                    Pending Approval
                    <span class="glyphicon glyphicon-ok"></span>
                </h3>
                <hr />
                <ul class="sectionOptions">
                    <ul class="sectionOptions">
                        @for (int i = 0; i < Model.formsToApprove.Count; i++)
                        {
                            <a href="/admin/approve/@Model.formsToApprove[i].Id">
                                <li>
                                    @Model.nameOfFilledForm[i] submitted by user @Model.usersWhoFilledForm[i]
                                </li>
                            </a>
                        }
                    </ul>
                </ul>
            </div>
        </div>
    </div>
</div>